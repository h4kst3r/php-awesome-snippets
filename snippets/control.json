{
    "If ... endif": {
        "prefix": "ifen",
        "body": [
            "if (${1:condition}):",
            "\t$0",
            "endif;"
        ],
        "description": "If endif block"
    },
    "If ... else ... endif": {
        "prefix": "ifelen",
        "body": [
            "if (${1:condition}):",
            "\t$2",
            "else:",
            "\t$0",
            "endif;"
        ],
        "description": "If else endif block"
    },
    "If ... elseif ... else ... endif": {
        "prefix": "ifelifen",
        "body": [
            "if (${1:condition}):",
            "\t$2",
            "elseif (${3:condition}):",
            "\t$4",
            "else:",
            "\t$0",
            "endif;"
        ],
        "description": "If elseif else endif block"
    },
    "If block": {
        "prefix": "ifb",
        "body": [
            "if (${1:condition}) {",
            "\t$0",
            "}"
        ],
        "description": "If  block"
    },
    "If ... else": {
        "prefix": "ifel",
        "body": [
            "if (${1:condition}) {",
            "\t$2",
            "} else {",
            "\t$0",
            "}"
        ],
        "description": "If else block"
    },
    "If ... elseif ... else": {
        "prefix": "ifelif",
        "body": [
            "if (${1:condition}) {",
            "\t$2",
            "} elseif (${3:condition}) {",
            "\t$4",
            "} else {",
            "\t$0",
            "}"
        ],
        "description": "If elseif else block"
    },
    "Switch block": {
        "prefix": "sw",
        "body": [
            "switch (\\$${1:variable}) {",
            "\tcase '${2:label}':",
            "\t\t$3",
            "\t\tbreak;",
            "\tcase '${4:label}':",
            "\t\t$5",
            "\t\tbreak;$6",
            "\tdefault:",
            "\t\t$0",
            "\t\tbreak;",
            "}"
        ],
        "description": "Switch block"
    },
    "Case statement": {
        "prefix": "cs",
        "body": [
            "case '${1:label}':",
            "\t$2",
            "\tbreak;"
        ],
        "description": "Case addon block"
    },
    "Ternary operator": {
        "prefix": "tern",
        "body": [
            "${1:condition} ? ${2:if_true} : ${3:if_false};"
        ],
        "description": "Ternary statement"
    }
}
